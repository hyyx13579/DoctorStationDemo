<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.founder.ihospital_bdrm_doctor_station_offline.Activity.AddPatientNoteBookEvent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/titlecolor"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/addPatientNoteActivityBack"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/icon_back_white" />

        <TextView
            style="@style/bar_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="患者备忘"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/addPatientNoteBookSaveData"
            style="@style/bar_text"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:text="保存"
            android:textColor="@color/white" />
    </LinearLayout>

    <EditText
        android:id="@+id/addPatientNoteBookEventTitle"
        style="@style/SizeTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:hint="请输入标题" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/border_gray"></LinearLayout>

    <EditText
        android:id="@+id/addPatientNoteBookEventContent"
        style="@style/sp15Text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@null"
        android:gravity="start"
        android:hint="请输入内容......" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/addImageProAll"
            style="@style/SizeThree"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:text="全部" />

        <Button
            android:id="@+id/addImageproImg"
            style="@style/SizeThree"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:text="图片" />

        <Button
            android:id="@+id/addImageProVideo"
            style="@style/SizeThree"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:text="视频" />

        <Button
            android:id="@+id/addImageProRudio"
            style="@style/SizeThree"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:text="录音" />
    </LinearLayout>

    <GridView
        android:id="@+id/addPatientNoteBookEventProView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:clickable="false"
        android:horizontalSpacing="3dp"
        android:numColumns="4"></GridView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/dottedline">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/addPatientNoteBookEventImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:onClick="onClick"
            android:src="@mipmap/icon_image" />

        <ImageView
            android:id="@+id/addPatientNoteBookEventVideo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:onClick="onClick"
            android:src="@mipmap/icon_camera" />

        <ImageView
            android:id="@+id/addPatientNoteBookEventRadio"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:onClick="onClick"
            android:src="@mipmap/icon_rec" />
    </LinearLayout>
</LinearLayout>
