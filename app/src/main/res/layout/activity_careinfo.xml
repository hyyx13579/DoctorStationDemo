<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/care_info_title_ly"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/titlecolor"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/care_info_title_back"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@mipmap/icon_back_white"

            />

        <TextView
            style="@style/SizeOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="体征单"
            android:textColor="@color/colorWhite" />


    </RelativeLayout>


    <com.founder.ihospital_bdrm_doctor_station_offline.care_info.CareInfoCustomView
        android:id="@+id/care_info_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/care_info_title_ly"
        android:layout_margin="10dp" />

</RelativeLayout>
