<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imgbtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/bgdepartmentoverviewbackbtn" />

            <TextView
                android:id="@+id/title_frag_two"
                style="@style/SizeFive"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_weight="2"
                android:gravity="left|center"
                android:text="我的患者" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/SizeFive"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="病区患者:" />


                <TextView
                    android:id="@+id/parent_frag_two"
                    style="@style/SizeFive"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="13人" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/SizeFive"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="我的患者:" />


                <TextView
                    android:id="@+id/myparent_frag_two"
                    style="@style/SizeFive"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="13人" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ward_category_super"
                android:drawablePadding="5dp"
                android:text="特级护理"
                android:textColor="@color/text_normal_color"
                android:textSize="8dp"
                />
            <TextView
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ward_category_one"
                android:drawablePadding="5dp"
                android:text="一级护理"
                android:textColor="@color/text_normal_color"
                android:textSize="8dp"
               />

            <TextView
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ward_category_two"
                android:drawablePadding="5dp"
                android:text="二级护理"
                android:textColor="@color/text_normal_color"
                android:textSize="8dp"
               />



            <TextView
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ward_category_three"
                android:drawablePadding="5dp"
                android:text="三级护理"
                android:textColor="@color/text_normal_color"
                android:textSize="8dp" />


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearlayout_frag_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"></LinearLayout>


</LinearLayout>

