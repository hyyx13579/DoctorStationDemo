<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:background="@drawable/listview_item"
        android:orientation="vertical">

        <TextView
            android:id="@+id/expandablelistview_child_gideview_item_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:padding="5dp"
            android:text="首次病程记录ewaedwaewqweqwewqewewq" />


        <TextView
            android:id="@+id/expandablelistview_child_gideview_item_time"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="16/05/12 11:05" />
    </LinearLayout>


</LinearLayout>