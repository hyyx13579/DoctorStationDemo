<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="2dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:id="@+id/name_lv_mr_frag_item"
                    style="@style/SizeTwo_way2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="20dp"
                    android:text="贾母哦某偶" />


                <TextView
                    android:id="@+id/sex_lv_mr_frag_item"
                    style="@style/sp16Text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/name_lv_mr_frag_item"
                    android:gravity="center|left"
                    android:paddingLeft="16dp"
                    android:text="女"
                    android:textColor="@color/item_card_text_color" />


                <TextView
                    android:id="@+id/badNo_lv_mr_frag_item"
                    style="@style/sp16Text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/sex_lv_mr_frag_item"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="001床"
                    android:textColor="@color/item_card_text_color" />


                <ImageView

                    android:id="@+id/collection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/star_normal_xhdpi" />


                <TextView
                    android:id="@+id/level_lv_mr_frag_item"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="60dp"
                    android:layout_toLeftOf="@+id/collection"
                    android:gravity="center"
                    android:textColor="@color/title_text_color"
                    android:textSize="14sp" />

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/border_color" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/sp14Text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="15dp"
                        android:text="住院号:"
                        android:textColor="@color/item_card_text_color" />

                    <TextView
                        android:id="@+id/HID_lv_mr_frag_item"
                        style="@style/sp14Text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:text="629702"
                        android:textColor="@color/item_card_text_color" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp">

                    <TextView
                        style="@style/sp14Text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:text="年龄:"
                        android:textColor="@color/item_card_text_color" />

                    <TextView
                        android:id="@+id/Age_lv_mr_frag_item"
                        style="@style/sp14Text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:text="67岁"
                        android:textColor="@color/item_card_text_color" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"

                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/sp14Text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="15dp"
                        android:text="住院天数:"
                        android:textColor="@color/item_card_text_color" />

                    <TextView
                        android:id="@+id/EnterDate_lv_mr_frag_item"
                        style="@style/sp14Text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:text="2015-01-26"
                        android:textColor="@color/item_card_text_color" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/sp14Text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:text="主管医生:"
                        android:textColor="@color/item_card_text_color" />

                    <TextView
                        android:id="@+id/DoctorInCharge_lv_mr_frag_item"
                        style="@style/sp14Text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:text="呼延雨翔"
                        android:textColor="@color/item_card_text_color" />


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                android:paddingBottom="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/sp14Text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="15dp"
                        android:text="病区:"
                        android:textColor="@color/item_card_text_color" />

                    <TextView
                        android:id="@+id/wardname_lv_mr_frag_item"
                        style="@style/sp14Text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:text="啊啊啊啊啊啊"
                        android:textColor="@color/item_card_text_color" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>

